<Window x:Class="CarManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid x:Name="grid1">
        <Label Content="Username" HorizontalAlignment="Left" Margin="198,59,0,0" VerticalAlignment="Top" Height="60" Width="183" FontSize="36"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="198,142,0,0" VerticalAlignment="Top" Height="60" Width="161" FontSize="36"/>
        <TextBox x:Uid="Username" Name="usernametxt" HorizontalAlignment="Left" Height="56" Margin="446,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169" FontSize="36"/>
        <TextBox x:Uid="Password" Name="passwordtxt" HorizontalAlignment="Left" Height="56" Margin="446,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169" FontSize="36"/>
        <Button Name="loginBtn"  Content="Login" HorizontalAlignment="Left" Margin="300,240,0,0" VerticalAlignment="Top" Width="202" FontSize="30" Height="69" Click="loginBtn_Click"/>

    </Grid>
</Window>
